---
import Image from "astro/components/Image.astro";
import ContactMeButton from "../buttons/ContactMeButton.astro";
import LightButton from "../buttons/LightButton.astro";

// Import images
import cisco from "../../images/cisco.webp";
import radian from "../../images/radian.webp";
import shuup from "../../images/shuup.webp";
import hgSearch from "../../images/hg-search.webp";
import canvas from "../../images/canvas.webp";
import canvas2 from "../../images/canvas-2.webp";
import realtyonegroup from "../../images/realtyonegroup.webp";
import bookelevent from "../../images/bookelevent.webp";
import detailsMobile from "../../images/details-mobile.webp";
import detailsMobile2 from "../../images/details-mobile-2.webp";
---

<style>
  .mosaic {
    padding: 0.5rem;
  }

  .mosaic {
    cursor: pointer;
  }

  .tall-container {
    max-height: 295px;
    height: 100%;
    overflow: hidden;
    border-radius: 10px;
  }
</style>

<section class="w-full px-4 py-12 md:py-24 lg:py-32 xl:py-40">
  <div class="space-y-10 xl:space-y-16">
    <div class="grid max-w-[1300px] mx-auto gap-4 md:grid-cols-2 md:gap-6">
      <div class="flex flex-col justify-center space-y-6">
        <div class="space-y-4">
          <h1 class="max-w-[600px] text-gray-500 text-4xl dark:text-gray-200">
            Grayson Steakley
          </h1>
          <h2 class="max-w-[600px] text-gray-500 text-2xl dark:text-gray-200">
            Full Stack Developer
          </h2>
          <p class="max-w-[600px] text-gray-500 md:text-xl dark:text-gray-400">
            I bring scalable UI and Architechtual solutions into reality for
            enterprises, agencies, and private-clients.
          </p>
        </div>
        <div class="flex flex-col gap-2 sm:flex-row">
          <LightButton>Explore My Work</LightButton>
          <ContactMeButton />
        </div>
      </div>
      <div class="relative self-end grid gap-2 mosaic">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-2">
          <div class="col-span-2 gap-2 flex items-center">
            <Image
              loading="eager"
              class="h-44 object-cover w-7/12 max-w-full rounded-lg"
              src={cisco}
              alt=""
            />
            <div
              class="flex flex-col gap-2 h-40 justify-center w-full items-end"
            >
              <Image
                loading="eager"
                class="object-contain h-1/3 object-top max-w-full rounded-lg bg-white"
                src={radian}
                alt=""
              />
              <Image
                loading="eager"
                class="object-contain h-2/3 max-h-44 object-top max-w-full rounded-lg bg-white"
                src={shuup}
                alt=""
              />
            </div>
          </div>
          <div class="col-span-2">
            <Image
              loading="eager"
              class="h-44 object-cover max-w-full rounded-lg"
              src={hgSearch}
              alt=""
            />
          </div>
        </div>
        <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
          <div class="col-span-2 gap-2 flex flex-col">
            <Image
              loading="eager"
              class="h-36 object-cover max-w-full rounded-lg"
              src={canvas}
              alt=""
            />
            <Image
              loading="eager"
              class="h-36 object-cover object-top max-w-full rounded-lg"
              src={realtyonegroup}
              alt=""
            />
          </div>
          <div class="col-span-2 gap-2 flex flex-col">
            <Image
              loading="eager"
              class="h-36 object-cover object-top max-w-full rounded-lg"
              src={bookelevent}
              alt=""
            />
            <div class="flex gap-2 w-full">
              <Image
                loading="eager"
                class="h-36 object-cover object-bottom max-w-full rounded-lg"
                src={canvas2}
                alt=""
              />
            </div>
          </div>
          <div class="col-span-1 gap-2 flex flex-col">
            <div
              class="flex flex-col gap-0 self-end items-start justify-start tall-container"
            >
              <Image
                loading="eager"
                class="h-auto bg-white object-contain object-top max-w-full rounded-t-lg"
                src={detailsMobile}
                alt=""
              />
              <Image
                loading="eager"
                class="h-auto bg-white object-contain object-top max-w-full rounded-b-lg"
                src={detailsMobile2}
                alt=""
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
