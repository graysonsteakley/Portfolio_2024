---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import ContactMeButton from "../components/buttons/ContactMeButton.astro";
import LightButton from "../components/buttons/LightButton.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <section class="w-full px-4 py-12 md:py-24 lg:py-32 xl:py-40">
        <div class="space-y-10 xl:space-y-16">
          <div
            class="grid max-w-[1300px] mx-auto gap-4 md:grid-cols-2 md:gap-6"
          >
            <div class="flex flex-col justify-center space-y-6">
              <div class="space-y-4">
                <h1
                  class="max-w-[600px] text-gray-500 text-4xl dark:text-gray-200"
                >
                  Grayson Steakley
                </h1>
                <h2
                  class="max-w-[600px] text-gray-500 text-2xl dark:text-gray-200"
                >
                  Full Stack Developer
                </h2>
                <p
                  class="max-w-[600px] text-gray-500 md:text-xl dark:text-gray-400"
                >
                  I bring scalable UI and Architechtual solutions into reality
                  for enterprises, agencies, and private-clients.
                </p>
              </div>
              <div class="flex flex-col gap-4 sm:flex-row">
                <LightButton>Explore My Work</LightButton>
                <ContactMeButton />
              </div>
            </div>
            <div class="relative self-end">
              <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                <div class="grid gap-4">
                  <div>
                    <img
                      class="h-auto max-w-full rounded-lg"
                      src="https://flowbite.s3.amazonaws.com/docs/gallery/masonry/image.jpg"
                      alt=""
                    />
